{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "program": "src/main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--experimental-specifier-resolution=node",
        "--loader",
        "ts-node/esm"
      ],
      "skipFiles": [
        "<node_internals>/**",
      ],
    },
  ]
}
